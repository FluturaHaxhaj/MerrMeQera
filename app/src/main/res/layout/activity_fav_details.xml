<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fiek.ppmapp.Favorites.FavDetailsActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbarlayout_id_fav"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/shcollapsingtoolbar_id_fav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/backgroundfragment"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginEnd="64dp"
                app:expandedTitleMarginStart="28dp"
                app:layout_scrollFlags="exitUntilCollapsed|scroll"
                app:title="Përshkrimi i Banesës"
                >

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"></androidx.appcompat.widget.Toolbar>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="50dp">


                    <ImageView
                        android:id="@+id/sh_thumbnail_fav"
                        android:layout_width="326dp"
                        android:layout_height="244dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/loading_shape" />

                    <LinearLayout
                        android:id="@+id/permbajtja_fav"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_below="@+id/sh_thumbnail_fav"
                        android:layout_margin="8dp"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/sh_shtepi_fav"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Banesa"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/sip_statike_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Siperfaqja:" />

                            <TextView
                                android:id="@+id/sh_siperfaqja_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/sip_statike_fav"
                                android:text="Siperfaqja" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/kate_statike_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Numri i kateve:" />

                            <TextView
                                android:id="@+id/sh_kate_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/kate_statike_fav"
                                android:text="Dhoma" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/cmimi_statik_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:text="Cmimi:" />

                            <TextView
                                android:id="@+id/sh_cmimi_fav"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="5dp"
                                android:layout_toRightOf="@+id/cmimi_statik_fav"
                                android:text="Cmimi"
                                android:textColor="#fff"
                                android:textSize="15sp" />

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>
            >

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <TextView
                android:id="@+id/sh_pershkrimi_fav"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pershkrimi" />


        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <Button
        android:id="@+id/tel_btn_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundfragment"
        android:textColor="@color/cardview_light_background"
        android:text="Thirr tani "
        android:layout_alignParentBottom="true"/>

</RelativeLayout>