<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MenuItems.Favorites.FavoritesActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout_id_fav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundfragment"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorwhite"
        app:tabMode="fixed"
        app:tabTextColor="@color/cardview_light_background">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_id_fav"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </androidx.viewpager.widget.ViewPager>


</LinearLayout>